

 <h1> <%= @restaurant.name %>  </h1>
  <p> <%= @restaurant.address %></p>
  <p> <%= @restaurant.phone_number %></p>
  <p> <%= @restaurant.category.capitalize %></p>
  <br>
  <h4>The Reviews of this Restaurant are:</h5>

  <% @restaurant.reviews.each do |review| %>
    <div class="card">
      <p> <%= review.content %></p>
      <p> <%= review.rating %></p>
      <br>
    </div>
  <% end %>

 <%= link_to 'All Restaurants', restaurants_path(@restaurant), class: "btn btn-primary" %>

  <%= link_to 'Review Restaurant', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>


